<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/backgroundlighttwo"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"

        >

        <TextView
            android:id="@+id/item_contact_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
            android:gravity="left|center"
            android:textColor="@color/backgroundlightfont"/>

        <TextView
            android:id="@+id/item_posting_for"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.4"
            android:gravity="right|center"
            android:textColor="@color/backgroundlightfonttwo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@color/colorAccent"
            android:elevation="4dp"
            android:text="@string/item_call"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@color/colorAccent"
            android:elevation="4dp"
            android:text="@string/item_sms"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>